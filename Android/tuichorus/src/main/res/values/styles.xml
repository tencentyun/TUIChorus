<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TUIChorusDialogTheme" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@color/tuichorus_color_bg_dialog</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="tuichorus_buttonStyle">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TUIChorusChatTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/tuichorus_white</item>
        <!--应用的背景色，popMenu的背景默认使用该颜色-->
    </style>

    <!-- Input dialog theme. -->
    <style name="TUIChorusInputDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--    tab页字体设置-->
    <style name="TUIChorusBaseTabFragmentTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
    </style>

    <style name="TUIChorusAudioEffetcTextStyle">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/tuichorus_white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="TUIChorusAudioEffectSeekBarStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:max">100</item>
        <item name="android:progress">100</item>
        <item name="android:maxHeight">4dp</item>
        <item name="android:minHeight">4dp</item>
        <item name="android:progressDrawable">@drawable/tuichorus_seekbar_progress_drawable</item>
        <item name="android:thumb">@drawable/tuichorus_seekbar_progress_thumb</item>
    </style>

    <style name="TUIChorusAudioEffetcNumStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/tuichorus_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">100</item>
        <item name="android:gravity">right</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/cl_music_container"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_song_id"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_song_id"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:gravity="center"
                android:textColor="@color/tuichorus_white"
                android:textSize="14sp"
                android:visibility="gone" />

        </LinearLayout>

        <com.tencent.liteav.tuichorus.ui.widget.RoundCornerImageView
            android:id="@+id/img_cover"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/tuichorus_ic_cover"
            app:layout_constraintLeft_toRightOf="@+id/cl_music_container"
            app:layout_constraintTop_toTopOf="parent"
            app:radius="15dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/img_cover"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_song_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="6dp"
                android:textColor="@color/tuichorus_white"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_singer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:gravity="center"
                android:textColor="@color/tuichorus_color_singer"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tv_song_name" />

            <TextView
                android:id="@+id/tv_seat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:gravity="center"
                android:textColor="@color/tuichorus_color_singer"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tv_singer" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:gravity="center"
                android:textColor="@color/tuichorus_color_singer"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@+id/tv_seat_name"
                app:layout_constraintTop_toBottomOf="@id/tv_singer" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/btn_nextsong"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:background="@drawable/tuichorus_ic_next_song"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_set_top"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:background="@drawable/tuichorus_ic_settop_normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:background="#ff0000"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/tuichorus_delete"
        android:textColor="#ffffff"
        android:textSize="14sp" />

</LinearLayout>
